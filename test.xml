<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="12dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_label_conn_state" />

            <Button
                android:id="@+id/main_btn_switch"
                style="@style/main_btn_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/switch_mode"
                android:textColor="#ff000000" />

            <Button
                android:id="@+id/main_btn_conn_state"
                style="@style/main_btn_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:enabled="false"
                android:text="@string/main_label_not_connected"
                android:textColor="@drawable/main_btn_item_greencolor_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_label_pwd_mgr" />

            <LinearLayout
                android:id="@+id/main_pin_remain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_bg"
                android:enabled="false"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/main_pin_remain_left"
                    style="@style/left_view_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:duplicateParentState="true"
                    android:text="@string/remain_times" />

                <Button
                    android:id="@+id/main_pin_remain_right"
                    style="@style/right_view_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <Button
                android:id="@+id/main_btn_ver_pin"
                style="@style/main_btn_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:enabled="false"
                android:text="@string/main_label_ver_pin" />

            <Button
                android:id="@+id/main_btn_modify_pwd"
                style="@style/main_btn_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:enabled="false"
                android:text="@string/main_label_modify_pwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_label_cert_mgr" />

            <Button
                android:id="@+id/main_btn_view_cert"
                style="@style/main_btn_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:enabled="false"
                android:text="@string/main_label_view_cert" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_label_sign" />

            <Button
                android:id="@+id/main_btn_signature_one"
                style="@style/main_btn_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:enabled="false"
                android:text="@string/main_label_sign_hash" />

            <Button
                android:id="@+id/main_btn_signature"
                style="@style/main_btn_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp"
                android:enabled="false"
                android:text="@string/main_label_sign_message" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>